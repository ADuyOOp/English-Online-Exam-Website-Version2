    <style>
        .footer {
            padding: 40px 80px;
            font-family: Arial, sans-serif;
            background-color: #393e58;
            background-image: url('/assets/bg-footer.webp');
            background-position: bottom center;
            background-repeat: no-repeat;
            background-size: contain;
            position: relative;
            flex-shrink: 0;
        }

        .footer-content {
            display: flex;
            justify-content: space-between;
            max-width: 1200px;
            margin: 0 auto;
            position: relative;
            z-index: 2;
        }

        .logo-placeholder {
            width: 150px;
            height: 60px;
            border: 2px dashed #FF7F63;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #fff;
            font-size: 14px;
            text-align: center;
            padding: 10px;
            background: rgba(255, 255, 255, 0.1);
            margin-bottom: 20px;
        }

        .footer-section {
            margin-right: 40px;
        }

        .footer-section h3 {
            color: #fff;
            font-size: 30px;
            margin-bottom: 20px;
            position: relative;
            display: inline-block;
        }

        .footer-section h3::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 60px;
            height: 3px;
            background-color: #FF7F63;
        }

        .footer-section ul {
            list-style: none;
            padding: 0;
        }

        .footer-section ul li {
            margin-bottom: 12px;
        }

        .footer-section ul li a {
            color: #fff;
            text-decoration: none;
            font-size: 20px;
            transition: color 0.3s;
        }

        .footer-section ul li a:hover {
            color: #FF7F63;
        }

        .social-icons {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .social-icon {
            width: 40px;
            height: 40px;
            background-color: #FF7F63;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            text-decoration: none;
            transition: background-color 0.3s;
        }

        .social-icon:hover {
            background-color: #e66e54;
        }

        .trademark {
            margin-top: 40px;
            padding-top: 20px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            color: #fff;
            font-size: 14px;
            text-align: center;
            max-width: 1200px;
            margin-left: auto;
            margin-right: auto;
            position: relative;
            z-index: 2;
            /* background-color: rgba(30, 41, 89, 0.9); */
            padding: 20px;
            border-radius: 8px;
        }

        .logo2 {
            display: flex;
            align-items: center;
            gap: 0.625rem;
            text-decoration: none;
        }

        .logo2 img {
            height: 4rem;
            width: 10rem;
        }
    </style>
